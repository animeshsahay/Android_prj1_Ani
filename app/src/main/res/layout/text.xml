<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical"
    android:padding="25dp">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:hint="Type your Command" android:password="true"
        android:id="@+id/editview1"
        />

    <LinearLayout
        android:weightSum="100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_weight="20"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bResult"
        android:text="Try command"
         />

    <ToggleButton
        android:layout_weight="80"
        android:layout_width="fill_parent"
        android:checked="true"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/tbPassword"
        android:paddingBottom="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Invalid"
        android:id="@+id/tvResult" android:gravity="center" android:textSize="25dp"/>

</LinearLayout>
